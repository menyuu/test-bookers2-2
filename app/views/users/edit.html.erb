<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

      <h2>User info</h2>

      <% if @user.errors.any? %>
        <div id="error_explanation">
          <h3><%= @user.errors.count %> error prohibited this obj from being saved:</h3>
        </div>
        <ul>
          <% @user.errors.full_messages.each do |message|  %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>

      <%= form_with model: @user, url: user_path(@user.id), method: :patch do |f| %>

        <div class="form-group">
          <%= f.label :name %>
          <%= f.text_field :name, autofocus: true, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :image, for: "user_profile_image" %>
          <%= f.file_field :profile_image, accept: "image/*", class: "form-control-file" %>
        </div>

        <div class="form-group">
          <%= f.label :introduction %>
          <%= f.text_area :introduction, class: "form-control", size: "5x5"%>
        </div>

        <div class="form-group">
        <%= f.submit "Update User", class: "btn btn-secondary" %>
        </div>

      <% end %>

    </div>
  </div>
</div>