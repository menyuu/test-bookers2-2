<div>
  <h2>User info</h2>

    <%= image_tag @user.get_profile_image(100, 100) %>
    <%= @user.name %>
    <%= @user.introduction %>
    <% if current_user%>
      <%=  link_to "編集", edit_user_path(@user.id) %>
    <% else %>
      <%= link_to "編集", user_path(current_user) %>
    <% end %>

  <h2>New book</h2>

    <%= form_with model: @book, url: books_path do |f| %>

      <%= f.label :Title, for: "book_title" %>
      <%= f.text_field :title %>

      <%= f.label :Opinion, for: "book_body" %>
      <%= f.text_area :body %>

      <%= f.submit "Create Book" %>

    <% end %>
</div>


<div>
  <h2>Users</h2>
  <table>
    <thead>
      <tr>
        <th>image</th>
        <th>name</th>
        <th colspan="4"></th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= image_tag user.get_profile_image(100, 100) %></td>
          <td><%= user.name %></td>
          <td><%= link_to "Show", user_path(user.id) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
