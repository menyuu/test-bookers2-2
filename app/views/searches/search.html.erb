<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render 'users/info', user: @user, book: @book %>
    </div>
    <div class="col-md-8 offset-md-1 mt-5 mt-md-0">
    <% if @model == "user" %>
      <h2>Users search for '<%= @content %>'</h2>
      <table class="table table-hover">
        <thead>
          <tr>
            <th></th>
            <th>Name</th>
            <th>Introduction</th>
          </tr>
        </thead>
      <% @records.each do |user| %>
        <tbody>
          <tr>
            <th>
              <%= image_tag user.get_profile_image(100, 100) %>
            </th>
            <th>
              <%= link_to user.name, user_path(user.id) %>
            </th>
            <th>
              <%= user.introduction %>
            </th>
          </tr>
        </tbody>
      <% end %>
      <% elsif @model == "book" %>
        <h2>Books search for '<%= @content %>'</h2>
        <table class="table table-hover">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
            </tr>
          </thead>
        <% @records.each do |book| %>
          <tbody>
            <tr>
              <th>
                <%= image_tag book.user.get_profile_image(100, 100) %>
              </th>
              <th>
                <%= link_to book.title, book_path(book.id) %>
              </th>
              <th>
                <%= book.body %>
              </th>
            </tr>
        </tbody>
        <% end %>
      <% end %>
      </table>
    </div>
  </div>
</div>