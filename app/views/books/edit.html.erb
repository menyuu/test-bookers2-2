<h1>Editing Book</h1>

<% if @book.errors.any? %>
  <div id="error_explanation">
    <h3><%= @book.errors.count %> error prohibited this obj from being saved:</h3>
  </div>
  <ul>
    <% @book.errors.full_messages.each do |message|  %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @book, url: book_path, method: :patch do |f| %>

  <div>
    <%= f.label :title, for: "book_title" %>
    <%= f.text_field :title %>
  </div>

  <div>
    <%= f.label :opinion, for: "book_body" %>
    <%= f.text_area :body %>
  </div>

  <div>
    <%= f.submit "Update Book" %>
  </div>

<% end %>

<%= link_to "Show", book_path(@book.id) %> | <%= link_to "Back", books_path %>