<h1>Editing Book</h1>

<%= form_with model: @book, url: book_path, method: :patch do |f| %>

  <div>
    <%= f.label :Title, for: "book_title" %>
    <%= f.text_field :title %>
  </div>

  <div>
    <%= f.label :Opinion, for: "book_body" %>
    <%= f.text_area :body %>
  </div>

  <div>
    <%= f.submit "Update Book" %>
  </div>

<% end %>

<%= link_to "Show", book_path(@book.id) %> | <%= link_to "Back", books_path %>