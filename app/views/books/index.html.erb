<div>
  <h2>User info</h2>

    <%= image_tag @user.get_profile_image(100, 100) %>
    <%= @user.name %>
    <%= @user.introduction %>
    <!-- あとで変更 -->
    <!--  link_to "編集", edit_user_path(@user.id) -->

  <h2>New book</h2>

    <%= form_with model: @book, url: books_path do |f| %>

      <%= f.label :Title, for: "book_title" %>
      <%= f.text_field :title %>

      <%= f.label :Opinion, for: "book_body" %>
      <%= f.text_area :body %>

      <%= f.submit "Create Book" %>

    <% end %>
</div>

<div>
  <h2>Books</h2>

  <table>
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td><!-- ユーザー画像 --></td>
          <td><%= link_to book.title, book_path(book.id) %></td>
          <td><%= book.body %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
