<% if @book.errors.any? %>
  <div id="error_explanation">
    <h3><%= @book.errors.count %> error prohibited this obj from being saved:</h3>
  </div>
  <ul>
    <% @book.errors.full_messages.each do |message|  %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>



<div>
  <h2>User info</h2>

    <%= image_tag @user.get_profile_image(100, 100) %>
    <teble>
      <tr></tr>
      <tr>
        <th>name</th>
        <th><%= @user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= @user.introduction %></th>
      </tr>
    </teble>
    <% if @user == current_user %>
      <%=  link_to "編集", edit_user_path(@user.id) %>
    <% else %>
      <%= link_to "編集", user_path(current_user) %>
    <% end %>

  <h2>New book</h2>
  
    <%= form_with model: @book, url: books_path do |f| %>

      <%= f.label :Title, for: "book_title" %>
      <%= f.text_field :title %>

      <%= f.label :Opinion, for: "book_body" %>
      <%= f.text_area :body %>

      <%= f.submit "Create Book" %>

    <% end %>
</div>

<div>
  <h2>Books</h2>

  <table>
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td>
            <%= link_to user_path(book.user.id) do %>
              <%= image_tag book.user.get_profile_image(100, 100) %>
            <% end %>
          </td>
          <td><%= link_to book.title, book_path(book.id) %></td>
          <td><%= book.body %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
