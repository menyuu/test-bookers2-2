<div>
  <h2>User info</h2>

    <%= image_tag @user.get_profile_image(100, 100) %>
    <%= @user.name %>
    <%= @user.introduction %>
    <!-- あとで変更 -->
    <!--  link_to "編集", edit_user_path(@user.id) -->

  <h2>New book</h2>

    <%= form_with model: @book, url: books_path, method: :post do |f| %>

      <%= f.label :Title, for: "book_title" %>
      <%= f.text_field :title %>

      <%= f.label :Opinion, for: "book_body" %>
      <%= f.text_area :body %>

      <%= f.submit "Create Book" %>

    <% end %>
</div>

<div>
  <h2>Book detail</h2>
  <table>
    <tbody>
      <tr>
        <td>
          <%= link_to  do %>
           <%= image_tag @book.user.get_profile_image(100, 100) %><br><%= @book.user.name %>
           <% end %>
        </td>
        <td><%= link_to @book.title, book_path(@book.id) %></td>
        <td><%= @book.body %></td>
        <% if @book.user.id == current_user.id %>
          <td><%= link_to "Edit", edit_book_path(@book.id) %></td>
          <td><%= link_to "Destroy", book_path, method: :delete %></td>
        <% end %>
      </tr>
    </tbody>
  </table>
</div>