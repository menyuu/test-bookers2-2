<%= render 'users/info', user: @user, book: @book %>

<div>
  <h2>Book detail</h2>
  <table>
    <tbody>
      <tr>
        <td>
          <%= link_to user_path(@user.id) do %>
           <%= image_tag @user.get_profile_image(100, 100) %><br><%= @user.name %>
           <% end %>
        </td>
        <td><%= link_to @user_books.title, book_path(@user_books.id) %></td>
        <td><%= @user_books.body %></td>
        <% if @user.id == current_user.id %>
          <td><%= link_to "Edit", edit_book_path(@user_books.id) %></td>
          <td><%= link_to "Destroy", book_path, method: :delete, data: {confirm: "本当に消しますか？"} %></td>
        <% end %>
      </tr>
    </tbody>
  </table>
</div>